<style>
    .product-info {
    max-width: 800px;
    margin: 0 auto;
    font-family: "Helvetica Neue", Arial, sans-serif;
    color: #000;
    line-height: 1.6;
    margin-top: 45px;
    }
    /* Icons Row */
   .product-icons {
   display: flex;
   justify-content: space-between;
   flex-wrap: wrap;
   {% comment %} border-bottom: 1px solid #ccc; {% endcomment %}
   padding-bottom: 15px;
   margin-bottom: 25px;
   }

   .icon-item {
   text-align: center;
   flex: 1;
   min-width: 120px;
   }

   .icon-item img {
   width: 45px;
   height: 45px;
   margin-bottom: 5px;
   background: transparent;
   }

   .icon-item p {
   font-size: 13px;
   font-weight: 500;
   margin: 0;
   }


    /* Accordion styling */
    .accordion {
    border-top: 1px solid #000;
    }

    .accordion-header {
    background: none;
    border: none;
    width: 100%;
    text-align: left;
    padding: 15px 0;
    {% comment %} font-size: 16px; {% endcomment %}
    {% comment %} font-weight: 600; {% endcomment %}
    text-transform: uppercase;
    letter-spacing: 0.5px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    cursor: pointer;
    }

    .accordion-icon {
    font-size: 20px;
    font-weight: 500;
    width: 20px;
    text-align: center;
    transition: transform 0.2s ease;
    }

    .accordion-content {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.25s ease-out;
    font-size: 14px;
    padding-right: 10px;
    }

    .accordion-content.open {
    max-height: 500px;
    transition: max-height 0.25s ease-in;
    }

    .accordion-content p {
    margin: 5px 0;
    }
    </style>

    <script>
    document.querySelectorAll(".accordion-header").forEach(header => {
    header.addEventListener("click", () => {
        const accordion = header.parentElement;
        const content = accordion.querySelector(".accordion-content");
        const icon = header.querySelector(".accordion-icon");
        const isOpen = content.classList.contains("open");

        // Close all accordions
        document.querySelectorAll(".accordion-content").forEach(c => c.classList.remove("open"));
        document.querySelectorAll(".accordion-icon").forEach(i => i.textContent = "+");

        // Open the clicked one if not already open
        if (!isOpen) {
        content.classList.add("open");
        icon.textContent = "–";
        }
    });
    });
    </script>