<style>
    /* Product Gallery Container */
    .product-gallery-container {
        display: flex;
        gap: 20px;
        align-items: flex-start;
        margin-bottom: 30px;
        position: sticky;
        top: 20px;
        z-index: 10;
    }

    /* Thumbnail Gallery */
    .product-thumbnails {
        width: 80px !important;
        max-width: 80px !important;
        min-width: 80px !important;
        flex-shrink: 0;
        overflow: hidden;
    }

    .thumbnail-swiper {
        height: 425px; /* Height for exactly 5 thumbnails (5 * 80px + 4 * 10px gap) */
        width: 80px !important;
        max-width: 80px !important;
        overflow: hidden;
        position: relative;
    }
    
    .thumbnail-swiper .swiper-scrollbar {
        width: 4px;
        right: -8px;
        background-color: #e1e1e1;
        border-radius: 2px;
    }
    
    .thumbnail-swiper .swiper-scrollbar-drag {
        background-color: #007bff;
        border-radius: 2px;
    }

    .thumbnail-swiper .swiper-wrapper {
        flex-direction: column;
        gap: 10px;
        width: 80px !important;
        max-width: 80px !important;
    }

    .thumbnail-slide {
        width: 80px !important;
        height: 80px !important;
        max-width: 80px !important;
        min-width: 80px !important;
        flex-shrink: 0;
        cursor: pointer;
        border: 2px solid transparent;
        border-radius: 8px;
        overflow: hidden;
        transition: border-color 0.3s ease;
        flex-shrink: 0; /* Prevent shrinking */
    }

    .thumbnail-slide:hover,
    .thumbnail-slide.swiper-slide-thumb-active {
        border-color: #007bff;
    }

    .thumbnail-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
    }

    /* Main Gallery */
    .swiper-container.is-product-gallery {
        flex: 1;
        max-width: calc(100% - 100px);
    }

    .main-gallery-swiper {
       width: 100%;
        height: 500px;
        border-radius: 12px;
        overflow: hidden;
    }

    .product_gallery-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
    }

    .product_gallery-lightbox {
        width: 100%;
        height: 100%;
        {% comment %} cursor: zoom-in; {% endcomment %}
        padding-left: 5px;
    }

    /* Sticky Add to Cart Wrapper */
    .product-header_add-to-cart-wrapper {
        position: sticky;
        top: 20px;
        z-index: 20;
    }

    /* Mobile responsiveness */
    @media (max-width: 768px) {
        .product-gallery-container {
            flex-direction: column;
            gap: 15px;
            position: static; /* Remove sticky on mobile */
            width: 100% !important;
            max-width: 100% !important;
        }

        .product-thumbnails {
            {% comment %} width: 100% !important; {% endcomment %}
            max-width: 100% !important;
            min-width: 100% !important;
            order: 2;
        }

        .thumbnail-swiper {
            height: 70px !important; /* Fixed height for mobile horizontal layout */
            width: 100% !important;
            max-width: 100% !important;
        }

        .thumbnail-swiper .swiper-wrapper {
            flex-direction: row !important;
            gap: 10px;
            width: auto !important;
            max-width: none !important;
        }

        .thumbnail-slide {
            width: 60px !important;
            height: 60px !important;
            max-width: 60px !important;
            min-width: 60px !important;
            flex-shrink: 0;
        }
        
        .thumbnail-swiper .swiper-scrollbar {
            width: auto !important;
            height: 4px;
            bottom: -8px;
            right: auto;
            left: 0;
        }

        .swiper-container.is-product-gallery {
            max-width: 100%;
            order: 1;
        }

        .main-gallery-swiper {
            max-width: 372px;
            height: 400px;
        }

        /* Remove sticky behavior on mobile for add-to-cart wrapper */
        .product-header_add-to-cart-wrapper {
            position: static;
        }
        .swiper-container.is-product-gallery {
            {% comment %} max-width: 100%; {% endcomment %}
            order: 1;
        }
    
        {% comment %} .main-gallery-swiper {
            height: 400px;
        } {% endcomment %}
    
        /* Remove sticky behavior on mobile for add-to-cart wrapper */
        .product-header_add-to-cart-wrapper {
            position: static;
        }

        /* Product icons 2x2 grid on mobile */
        .product-icons {
