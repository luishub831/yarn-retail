                    slidesPerView: 4, // Fixed number, never 'auto'
                    spaceBetween: 10,
                    width: 80, // Let CSS handle width
                    scrollbar: {
                        el: '.swiper-scrollbar',
                        draggable: true,
                    },
                }
            }
        });

        // Initialize main gallery swiper
        const mainGallery = new Swiper('.main-gallery-swiper', {
            spaceBetween: 10,
            thumbs: {
                swiper: thumbnailSwiper,
            },
            {% comment %} pagination: {
                el: '.swiper-pagination',
                clickable: true,
            }, {% endcomment %}
            keyboard: {
                enabled: true,
            },
            mousewheel: {
                enabled: false,
            }
        });

        // Sync thumbnail clicks with main gallery
        document.querySelectorAll('.thumbnail-slide').forEach((thumbnail, index) => {
            thumbnail.addEventListener('click', () => {
                mainGallery.slideTo(index);
            });
        });
    });

