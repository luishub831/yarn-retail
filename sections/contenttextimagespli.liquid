<div class="padding-global">
  <div class="container-large">
    <div class="padding-section-medium">
      <div class="layout1_component">
        <div class="settings-schema w-embed"></div>
        <div class="w-layout-grid layout1_content {{ section.settings.content_layout }}">
          <div class="layout1_content-wrapper">
            <div class="margin-bottom margin-xsmall">
              <div li-object="section.settings.content_tagline_text" class="text-style-tagline">
                {{ section.settings.content_tagline_text }}
              </div>
            </div>
            <div class="margin-bottom margin-small">
              <h2 li-object="section.settings.content_heading_text" class="heading-style-h2">
                {{ section.settings.content_heading_text }}
              </h2>
            </div>
            <div class="richtext-wrapper text-size-medium w-richtext">
              <p li-object="section.settings.content_paragraph_text">{{ section.settings.content_paragraph_text }}</p>
            </div>
            <div class="margin-top margin-medium">
              <div class="button-group">{% render 'button' %}</div>
            </div>
          </div>
          <div class="layout1_image-wrapper">
            <img
              li-object:src="section.settings.content_image | image_url: width: 720"
              loading="eager"
              alt=""
              src="{{ section.settings.content_image | image_url: width: 720 }}"
              class="layout1_image"
            >
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
