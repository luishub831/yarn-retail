<div class="collection-header">
  <div class="container-large">
    <div class="collection-header__wrapper">
      <div class="collection-header__content">
        <div class="collection-header__breadcrumb">
          <a href="/" class="collection-header__breadcrumb-link">Home</a>
          <span class="collection-header__breadcrumb-separator">></span>
          <a href="/collections" class="collection-header__breadcrumb-link">Collections</a>
          <span class="collection-header__breadcrumb-separator">></span>
          <span class="collection-header__breadcrumb-current">{{ collection.title }}</span>
        </div>
        <h1 class="collection-header__title">{{ collection.title }}</h1>
      </div>
      
      <div class="collection-header__image">
        <div class="collection-header__curved-design">
          <svg viewBox="0 0 400 200" class="collection-header__svg">
            <!-- Curved design elements -->
            <path d="M0,150 Q100,50 200,100 T400,80" fill="none" stroke="#8B5CF6" stroke-width="20" opacity="0.8"/>
            <path d="M50,180 Q150,80 250,130 T450,110" fill="none" stroke="#F66718" stroke-width="15" opacity="0.9"/>
            <path d="M100,120 Q200,20 300,70 T500,50" fill="none" stroke="#EC4899" stroke-width="12" opacity="0.7"/>
            
            <!-- Background circles for depth -->
            <circle cx="320" cy="80" r="40" fill="#8B5CF6" opacity="0.2"/>
            <circle cx="280" cy="120" r="25" fill="#F66718" opacity="0.3"/>
            <circle cx="350" cy="140" r="30" fill="#EC4899" opacity="0.2"/>
          </svg>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.collection-header {
  background: linear-gradient(135deg, #8B5CF6 0%, #EC4899 50%, #F66718 100%);
  color: white;
  padding: 40px 0 60px;
  position: relative;
  overflow: hidden;
}

.collection-header__wrapper {
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
  z-index: 2;
}

.collection-header__content {
  flex: 1;
  max-width: 50%;
}

.collection-header__breadcrumb {
  margin-bottom: 20px;
  font-size: 14px;
  opacity: 0.9;
}

.collection-header__breadcrumb-link {
  color: white;
  text-decoration: none;
  transition: opacity 0.2s ease;
}

.collection-header__breadcrumb-link:hover {
  opacity: 0.8;
  text-decoration: underline;
}

.collection-header__breadcrumb-separator {
  margin: 0 8px;
  opacity: 0.7;
}

.collection-header__breadcrumb-current {
  opacity: 0.8;
}

.collection-header__title {
  font-size: 48px;
  font-weight: bold;
  margin: 0;
  line-height: 1.2;
}

.collection-header__image {
  flex: 1;
  max-width: 50%;
  position: relative;
  height: 200px;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.collection-header__curved-design {
  width: 100%;
  height: 100%;
  position: relative;
}

.collection-header__svg {
  width: 100%;
  height: 100%;
}

/* Responsive design */
@media (max-width: 768px) {
  .collection-header {
    padding: 30px 0 40px;
  }
  
  .collection-header__wrapper {
    flex-direction: column;
    text-align: center;
    gap: 30px;
  }
  
  .collection-header__content,
  .collection-header__image {
    max-width: 100%;
  }
  
  .collection-header__title {
    font-size: 36px;
  }
  
  .collection-header__image {
    height: 150px;
  }
}

@media (max-width: 480px) {
  .collection-header__title {
    font-size: 28px;
  }
  
  .collection-header__breadcrumb {
    font-size: 12px;
  }
}

/* Animation for the curved elements */
@keyframes float {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-10px); }
}

.collection-header__curved-design path:nth-child(1) {
  animation: float 6s ease-in-out infinite;
}

.collection-header__curved-design path:nth-child(2) {
  animation: float 4s ease-in-out infinite 0.5s;
}

.collection-header__curved-design path:nth-child(3) {
  animation: float 5s ease-in-out infinite 1s;
}
</style>

