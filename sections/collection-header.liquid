<div class="container-large">
    <div class="collection-header">
      <div class="margin-left-3percent">
        <div class="collection-header__wrapper">
          <div class="collection-header__content">
            <h1 class="collection-header__title">{{ collection.title }}</h1>
          </div>
        </div>
      </div>
      
      <div class="collection-header__decorative">
        <img src="{{ 'decorative-curve.png' | file_url }}" alt="Decorative curve" class="collection-header__curve-image" width="400" height="200">
      </div>
    </div>
    
    <!-- Breadcrumb below the purple section -->
    <div class="collection-breadcrumb">
      <div class="margin-left-3percent">
        <div class="collection-breadcrumb__wrapper">
          <a href="{{ routes.root_url }}" class="collection-breadcrumb__link">Home</a>
          <span class="collection-breadcrumb__separator">></span>
          <a href="{{ routes.collections_url }}" class="collection-breadcrumb__link">Collections</a>
          <span class="collection-breadcrumb__separator">></span>
          <span class="collection-breadcrumb__current">{{ collection.title }}</span>
        </div>
      </div>
    </div>

</div>

<style>
.collection-header {
  background: {{ section.settings.background_color | default: '#753F9A' }};
  color: white;
  height: 80px;
  position: relative;
  overflow: hidden;
  border-radius: 16px 16px 0 0;
  display: flex;
  align-items: center;
}

.collection-header__wrapper {
  position: relative;
  z-index: 2;
}

.collection-header__content {
  padding-left: 0;
}

.collection-header__title {
  font-size: 2rem;
  font-weight: 400;
  margin: 0;
  line-height: 1.2;
  text-transform: inherit;
}

.collection-header__decorative {
  position: absolute;
  top: 0;
  right: 0;
  height: 100%;
  width: 50%;
  z-index: 1;
  overflow: hidden;
}

.collection-header__curve-image {
  position: absolute;
  top: 0;
  right: 0;
  height: 100%;
  width: auto;
  max-width: 400px;
  background: transparent;
}

/* Breadcrumb section */
.collection-breadcrumb {
  background: #E4E4E4;
  height: 35px;
  display: flex;
  align-items: center;
  border-radius: 0 0 16px 16px;
  margin-bottom: 30px;
}

.collection-breadcrumb__wrapper {
  font-size: 14px;
  padding: 0;
}

.collection-breadcrumb__link {
  color: #666;
  text-decoration: none;
  transition: color 0.2s ease;
}

.collection-breadcrumb__link:hover {
  color: #753F9A;
  text-decoration: underline;
}

.collection-breadcrumb__separator {
  margin: 0 8px;
  color: #999;
}

.collection-breadcrumb__current {
  color: #333;
  font-weight: 500;
}

/* Responsive design */
@media (max-width: 768px) {
  .collection-header {
    padding: 30px 0 40px;
  }
  
  .collection-header__title {
    font-size: 36px;
  }
  
  .collection-header__decorative {
    display: none;
  }
  
  .collection-breadcrumb {
    padding: 10px 0;
  }
  
  .collection-breadcrumb__wrapper {
    font-size: 12px;
  }
}

@media (max-width: 480px) {
  .collection-header__title {
    font-size: 28px;
  }
}


</style>

{% schema %}
{
  "tag": "section",
  "name": "Collection Header",
  "class": "collection-header-section",
  "settings": [
    {
      "type": "header",
      "content": "Collection Header Settings"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#753F9A"
    },
    {
      "type": "range",
      "id": "header_padding_top",
      "min": 20,
      "max": 80,
      "step": 5,
      "unit": "px",
      "label": "Top Padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "header_padding_bottom", 
      "min": 20,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 60
    }
  ],
  "presets": [
    {
      "name": "Collection Header",
      "category": "Collection"
    }
  ]
}
{% endschema %}