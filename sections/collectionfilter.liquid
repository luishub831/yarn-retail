<!-- Collection Filter Header Bar -->
<div class="collection-filter-header container-large">
  <div class="collection-header-bar">
    <div class="collection-left-controls">
      <button class="filter-toggle-btn" id="filterToggle">
        <div class="filter-toggle-left">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <line x1="4" y1="21" x2="4" y2="14"></line>
            <line x1="4" y1="10" x2="4" y2="3"></line>
            <line x1="12" y1="21" x2="12" y2="12"></line>
            <line x1="12" y1="8" x2="12" y2="3"></line>
            <line x1="20" y1="21" x2="20" y2="16"></line>
            <line x1="20" y1="12" x2="20" y2="3"></line>
            <line x1="1" y1="14" x2="7" y2="14"></line>
            <line x1="9" y1="8" x2="15" y2="8"></line>
            <line x1="17" y1="16" x2="23" y2="16"></line>
          </svg>
          <span class="filter-toggle-text">Show filters</span>
        </div>
        <svg class="filter-toggle-arrow" width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor">
          <polyline points="15,18 9,12 15,6"></polyline>
        </svg>
      </button>
      
      <div class="collection-info">
        <span class="collection-count">Showing {{ collection.products_count }} of {{ collection.all_products_count }} items</span>
      </div>
    </div>
    
    <div class="collection-right-controls">
      <div class="filter_tags-wrapper">
        {% for filters in collection.filters %}
          {% for filter_value in filters.active_values %}
            <div class="filter_tag">
              {{ filter_value.label }}
              <a href="{{ filter_value.url_to_remove }}" class="filter_close">✕</a>
            </div>
          {% endfor %}
        {% endfor %}
      </div>

      <div class="sort-wrapper">
        <label for="sort-by" class="sort-label">Sort by</label>
        <select id="sort-by" class="sort_select">
          {% for option in collection.sort_options %}
            <option value="{{ option.value }}" {% if option.value == collection.sort_by %}selected{% endif %}>{{ option.name }}</option>
          {% endfor %}
        </select>
      </div>
    </div>
  </div>
</div>

<div class="collection-layout container-large">
  <!-- Mobile Overlay -->
  <div class="mobile-overlay" id="mobileOverlay"></div>
  
  <!-- Left Sidebar Filters -->
  <aside class="collection-filters" id="collectionFilters">
    <div class="filter-header">
      <div class="filter-header-left">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor">
          <line x1="4" y1="21" x2="4" y2="14"></line>
          <line x1="4" y1="10" x2="4" y2="3"></line>
          <line x1="12" y1="21" x2="12" y2="12"></line>
          <line x1="12" y1="8" x2="12" y2="3"></line>
          <line x1="20" y1="21" x2="20" y2="16"></line>
          <line x1="20" y1="12" x2="20" y2="3"></line>
          <line x1="1" y1="14" x2="7" y2="14"></line>
          <line x1="9" y1="8" x2="15" y2="8"></line>
          <line x1="17" y1="16" x2="23" y2="16"></line>
        </svg>
        <span>Hide filters</span>
      </div>
      <button class="filter-close-btn" id="filterCloseBtn">×</button>
    </div>
    <div class="filter_filters-wrapper">
      <form action="{{ routes.search_url }}" method="get" role="search" class="filter_form_component">
        <div class="filter_form">
          <div class="filter_scroll-wrapper">
            <div class="filter_filter-group-list">
              {% for filter in collection.filters %}
                <div class="filter_filter-group">
                  <h4 class="filter-title">{{ filter.label }}</h4>
                  <div class="filter_list">
                    {% for filter_value in filter.values %}
                      <div class="filter_item">
                        <label class="filter_checkbox-wrapper">
                          <input type="checkbox" 
                                 {% if filter_value.active %}checked{% endif %}
                                 data-url-add="{{ filter_value.url_to_add }}"
                                 data-url-remove="{{ filter_value.url_to_remove }}"
                                 class="filter_checkbox-input">
                          <span class="filter_checkbox-custom"></span>
                          <span class="filter_checkbox-label">
                            {{ filter_value.label }} <span class="filter-count">({{ filter_value.count }})</span>
                          </span>
                        </label>
                      </div>
                    {% endfor %}
                  </div>
                </div>
              {% endfor %}
            </div>
          </div>
        </div>
      </form>
    </div>
  </aside>

  <!-- Right Product Grid -->
  <main class="collection-products">
    <div class="filter_product-grid">
      {% for product in collection.products %}
        {% assign product_index = forloop.index %}
        
        <!-- Add promotion card at 8th position on desktop, 7th on mobile -->
        {% if product_index == 8 %}
