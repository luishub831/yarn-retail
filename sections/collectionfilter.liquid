            <div class="promo-content">
              <div class="promo-header">
                <h3>WEEKLY SPECIALS</h3>
              </div>
              <div class="promo-discount">
                <div class="promo-percentage-container">
                  <div class="promo-text">ENJOY UP TO</div>
                  <div class="promo-percentage">50<span class="percent">% OFF</span></div>
                </div>
              </div>
              <div class="promo-description">
                <div class="promo-subheader">Take advantage of this week's specials!</div>
                <div class="promo-subtext">SPECIALS CHANGE EVERY WEEK</div>
              </div>
              <a href="{{ routes.collections_url }}/weekly-specials" class="button w-inline-block is-default is-secondary">SHOP ALL SPECIALS</a>
            </div>
          </div>
        {% endif %}
        
        {% if product_index == 7 %}
          <div class="promotion-card mobile-promo">
            <div class="promo-content">
              <div class="promo-header">
                <h3>WEEKLY SPECIALS</h3>
              </div>
              <div class="promo-discount">
                <div class="promo-percentage-container">
                  <div class="promo-text">ENJOY UP TO</div>
                  <div class="promo-percentage">50<span class="percent">% OFF</span></div>
                </div>
              </div>
              <div class="promo-description">
                <div class="promo-subheader">Take advantage of this week's specials!</div>
                <div class="promo-subtext">SPECIALS CHANGE EVERY WEEK</div>
              </div>
              <a href="{{ routes.collections_url }}/weekly-specials" class="promo-button">SHOP ALL SPECIALS</a>
            </div>
          </div>
        {% endif %}
        
        <div class="product12_slide">
          {% render 'product_slide', product: product %}
        </div>
      {% endfor %}
    </div>

    <!-- Load More Button -->
    {% comment %}
    {% if paginate.pages > 1 %}
      <div class="collection-pagination">
        <button class="load-more-btn">LOAD MORE</button>
      </div>
    {% endif %}
    {% endcomment %}
  </main>
</div>
