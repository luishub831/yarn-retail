<div class="collection-layout container-large">
  <!-- Left Sidebar Filters -->
  <aside class="collection-filters">
    <div class="filter_filters-wrapper">
      <form action="{{ routes.search_url }}" method="get" role="search" class="filter_form_component">
        <div class="filter_form">
          <div class="filter_scroll-wrapper">
            <div class="filter_filter-group-list">
              {% for filter in collection.filters %}
                <div class="filter_filter-group">
                  <h4 class="filter-title">{{ filter.label }}</h4>
                  <div class="filter_list">
                    {% for filter_value in filter.values %}
                      <div class="filter_item">
                        <label class="filter_checkbox-wrapper">
                          <input type="checkbox" 
                                 {% if filter_value.active %}checked{% endif %}
                                 data-url-add="{{ filter_value.url_to_add }}"
                                 data-url-remove="{{ filter_value.url_to_remove }}"
                                 class="filter_checkbox-input">
                          <span class="filter_checkbox-custom"></span>
                          <span class="filter_checkbox-label">
                            {{ filter_value.label }} <span class="filter-count">({{ filter_value.count }})</span>
                          </span>
                        </label>
                      </div>
                    {% endfor %}
                  </div>
                </div>
              {% endfor %}
            </div>
          </div>
        </div>
      </form>
    </div>
  </aside>

  <!-- Right Product Grid -->
  <main class="collection-products">
    <div class="collection-header-bar">
      <div class="collection-info">
        <span class="collection-count">Showing {{ collection.products_count }} of {{ collection.all_products_count }} items</span>
      </div>
      
      <div class="collection-controls">
        <div class="filter_tags-wrapper">
          {% for filters in collection.filters %}
            {% for filter_value in filters.active_values %}
              <div class="filter_tag">
                {{ filter_value.label }}
                <a href="{{ filter_value.url_to_remove }}" class="filter_close">✕</a>
              </div>
            {% endfor %}
          {% endfor %}
        </div>

        <select id="sort-by" class="sort_select">
          {% for option in collection.sort_options %}
            <option value="{{ option.value }}" {% if option.value == collection.sort_by %}selected{% endif %}>{{ option.name }}</option>
          {% endfor %}
        </select>
      </div>
    </div>

    <div class="filter_product-grid">
      {% for product in collection.products %}
        <div class="product12_slide">
          {% render 'product_slide', product: product %}
        </div>
      {% endfor %}
    </div>

    <!-- Load More Button -->
    {% comment %}
    {% if paginate.pages > 1 %}
      <div class="collection-pagination">
        <button class="load-more-btn">LOAD MORE</button>
      </div>
    {% endif %}
    {% endcomment %}
  </main>
</div>
<style>
/* Main Layout */
.collection-layout {
  display: flex;
  gap: 40px;
  align-items: flex-start;
  margin-top: 30px;
}

/* Left Sidebar Filters */
.collection-filters {
  width: 260px;
  flex-shrink: 0;
  background: #f8f8f8;
  border-radius: 12px;
  padding: 20px;
}

.filter_filter-group {
  margin-bottom: 30px;
}

.filter-title {
  font-weight: 600;
  font-size: 16px;
  margin-bottom: 15px;
  padding-bottom: 10px;
  border-bottom: 1px solid #e0e0e0;
  text-transform: uppercase;
  color: #333;
}

.filter_list {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.filter_checkbox-wrapper {
  display: flex;
  align-items: center;
  gap: 10px;
  cursor: pointer;
  padding: 5px 0;
  transition: all 0.2s ease;
}

.filter_checkbox-wrapper:hover {
  background: rgba(117, 63, 154, 0.05);
  border-radius: 6px;
  padding-left: 8px;
}

.filter_checkbox-input {
  display: none;
}

.filter_checkbox-custom {
  width: 16px;
  height: 16px;
  border: 2px solid #ddd;
  border-radius: 3px;
  position: relative;
  transition: all 0.2s ease;
}

.filter_checkbox-input:checked + .filter_checkbox-custom {
  background: #753F9A;
  border-color: #753F9A;
}

.filter_checkbox-input:checked + .filter_checkbox-custom::after {
  content: '✓';
  position: absolute;
  top: -2px;
  left: 2px;
  color: white;
  font-size: 12px;
  font-weight: bold;
}

.filter_checkbox-label {
  font-size: 14px;
  color: #333;
  user-select: none;
}

.filter-count {
  color: #999;
  font-size: 12px;
}

/* Right Product Section */
.collection-products {
  flex: 1;
}

.collection-header-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30px;
  padding-bottom: 15px;
  border-bottom: 1px solid #e0e0e0;
}

.collection-info {
  color: #666;
  font-size: 14px;
}

.collection-controls {
  display: flex;
  align-items: center;
  gap: 20px;
}

.filter_tags-wrapper {
  display: flex;
  gap: 10px;
  flex-wrap: wrap;
}

.filter_tag {
  background: #753F9A;
  color: white;
  padding: 6px 12px;
  border-radius: 20px;
  font-size: 12px;
  display: flex;
  align-items: center;
  gap: 8px;
}

.filter_close {
  color: white;
  text-decoration: none;
  font-weight: bold;
  cursor: pointer;
}

.sort_select {
  padding: 8px 12px;
  border: 1px solid #ddd;
  border-radius: 6px;
  background: white;
  font-size: 14px;
  min-width: 160px;
}

/* Product Grid */
.filter_product-grid {
  display: grid;
  {% comment %} grid-template-columns: repeat(auto-fit, minmax(218px, 1fr)); {% endcomment %}
  grid-template-columns: repeat(4, 1fr);
  gap: 10px;
  margin-bottom: 40px;
}

/* Enhanced Product Card Styling */
.product-card_enhanced {
  background: white;
  border-radius: 12px;
  overflow: hidden;
  transition: all 0.3s ease;
  border: 1px solid #f0f0f0;
  position: relative;
}

.product-card_enhanced:hover {
  transform: translateY(-8px);
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
  border-color: #753F9A;
}

.product-card_image-container {
  position: relative;
  aspect-ratio: 1;
  overflow: hidden;
}

.product-card_image-wrapper {
  display: block;
  width: 100%;
  height: 100%;
}

.product-card_image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.product-card_enhanced:hover .product-card_image {
  transform: scale(1.05);
}

.product-card_tag_list {
  position: absolute;
  top: 15px;
  left: 15px;
  z-index: 2;
}

.product-card_tag {
  background: #333;
  color: white;
  padding: 4px 8px;
  border-radius: 12px;
  font-size: 11px;
  font-weight: 500;
  margin-bottom: 5px;
  display: inline-block;
}

.product-card_tag.is-sale {
  background: #ff6b35;
}

.product-card_content {
  padding: 20px;
  position: relative;
}

.product-card_link {
  text-decoration: none;
  color: inherit;
}

.product-card_title {
  font-weight: 600;
  font-size: 16px;
  color: #333;
  margin-bottom: 8px;
  line-height: 1.3;
}

.product-card_price {
  margin-bottom: 15px;
}

.product-card_price-compare {
  text-decoration: line-through;
  color: #999;
  font-size: 14px;
  margin-right: 8px;
}

.product-card_price-current {
  font-weight: 600;
  color: #333;
  font-size: 16px;
}

/* Button States */
.product-card_form-wrapper {
  transition: opacity 0.3s ease;
}

.product-card_hover-button {
  opacity: 0;
  transition: opacity 0.3s ease;
  position: absolute;
  bottom: 20px;
  left: 20px;
  right: 20px;
}


/* Show/Hide buttons on hover */
.product-card_enhanced:hover .product-card_form-wrapper {
  opacity: 0;
}

.product-card_enhanced:hover .product-card_hover-button {
  opacity: 1;
}

/* Load More Button */
.collection-pagination {
  text-align: center;
  margin-top: 40px;
}

.load-more-btn {
  background: #753F9A;
  color: white;
  border: none;
  padding: 15px 40px;
  border-radius: 8px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  cursor: pointer;
  transition: all 0.3s ease;
}

.load-more-btn:hover {
  background: #5d2f7a;
  transform: translateY(-2px);
}

/* Mobile Responsive */
@media (max-width: 768px) {
  .collection-layout {
    flex-direction: column;
    gap: 20px;
  }

  .collection-filters {
    width: 100%;
    order: 2;
  }

  .collection-products {
    order: 1;
  }

  .collection-header-bar {
    flex-direction: column;
    gap: 15px;
    align-items: stretch;
  }

  .collection-controls {
    justify-content: space-between;
  }

  .filter_product-grid {
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
  }

  .product-card_enhanced:hover {
    transform: none;
  }

  .product-card_hover-button {
    opacity: 1;
  }

  .product-card_form-wrapper {
    display: none;
  }
}

@media (max-width: 480px) {
  .filter_product-grid {
    grid-template-columns: 1fr 1fr;
    gap: 15px;
  }

  .product-card_content {
    padding: 15px;
  }

  .product-card_title {
    font-size: 14px;
  }

  .product-card_price-current {
    font-size: 14px;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Handle filter checkbox clicks
  const filterCheckboxes = document.querySelectorAll('.filter_checkbox-input');
  
  filterCheckboxes.forEach(checkbox => {
    checkbox.addEventListener('change', function() {
      const urlToNavigate = this.checked ? 
        this.getAttribute('data-url-add') : 
        this.getAttribute('data-url-remove');
      
      if (urlToNavigate) {
        window.location.href = urlToNavigate;
      }
    });
  });

  // Handle sort selection
  const sortSelect = document.getElementById('sort-by');
  if (sortSelect) {
    sortSelect.addEventListener('change', function() {
      const url = new URL(window.location);
      url.searchParams.set('sort_by', this.value);
      window.location.href = url.toString();
    });
  }

  // Handle load more functionality (if implemented later)
  const loadMoreBtn = document.querySelector('.load-more-btn');
  if (loadMoreBtn) {
    loadMoreBtn.addEventListener('click', function() {
      // Load more products functionality
      console.log('Load more products');
    });
  }
});
</script>

