  const filterToggleText = document.querySelector('.filter-toggle-text');
  const mobileOverlay = document.getElementById('mobileOverlay');
  const filterCloseBtn = document.getElementById('filterCloseBtn');
  
  function isMobile() {
    return window.innerWidth <= 768;
  }
  
  if (filterToggle && collectionFilters) {
    filterToggle.addEventListener('click', function() {
      if (isMobile()) {
        // Mobile behavior - show side navigation from right
        collectionFilters.classList.add('mobile-open');
        mobileOverlay.classList.add('active');
        document.body.style.overflow = 'hidden';
        // Keep button text as "Show filters" on mobile
        filterToggleText.textContent = 'Show filters';
      } else {
        // Desktop behavior
        const isHidden = collectionFilters.classList.contains('hidden');
        
        if (isHidden) {
          collectionFilters.classList.remove('hidden');
          collectionLayout.classList.remove('filters-hidden');
          filterToggle.classList.remove('collapsed');
          filterToggleText.textContent = 'Hide filters';
        } else {
          collectionFilters.classList.add('hidden');
          collectionLayout.classList.add('filters-hidden');
          filterToggle.classList.add('collapsed');
          filterToggleText.textContent = 'Show filters';
        }
      }
    });
  }

  // Close mobile filters
  function closeMobileFilters() {
    if (collectionFilters) {
      collectionFilters.classList.remove('mobile-open');
    }
    if (mobileOverlay) {
      mobileOverlay.classList.remove('active');
    }
    document.body.style.overflow = '';
  }

  if (filterCloseBtn) {
    filterCloseBtn.addEventListener('click', closeMobileFilters);
  }

  if (mobileOverlay) {
    mobileOverlay.addEventListener('click', closeMobileFilters);
  }

  // Handle window resize
  window.addEventListener('resize', function() {
    if (!isMobile()) {
      closeMobileFilters();
    }
  });

  // Handle filter checkbox clicks
  const filterCheckboxes = document.querySelectorAll('.filter_checkbox-input');
  
