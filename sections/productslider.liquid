<div id="products" class="padding-global">
   <div class="container-large">
      <div class="padding-section-small">
        <div class="heading-style-h3 "><h3 class="text-align-center">{{ section.settings.products_section_title }}</h3></div>
         <div class="product12_component">
            <div class="margin-bottom">
               <div class="product12_heading-wrapper">
                  <div class="product12_heading">
                     <div class="max-width-large">
                        <div class="settings-schema w-embed"></div>
                        <div class="margin-bottom margin-xsmall">
                           <h2 li-object="section.settings.products_heading_text" class="heading-style-h2">{{ section.settings.products_heading_text }}</h2>
                        </div>
                        <div class="richtext-wrapper text-size-medium w-richtext">
                           <p li-object="section.settings.products_paragraph_text">{{ section.settings.products_paragraph_text }}</p>
                        </div>
                     </div>
                  </div>
                  <div class="button-group">{% render 'button' %}</div>
               </div>
            </div>
            <div data-delay="4000" data-animation="slide" class="product12_slider w-slider" data-autoplay="false" data-easing="ease" data-hide-arrows="false" data-disable-swipe="false" data-autoplay-limit="0" data-nav-spacing="3" data-duration="500" data-infinite="true">
               <div class="product12_mask w-slider-mask">
                  {% for product in section.settings.collection_select_a_collection.products limit: section.settings.collection_select_a_collection_limit %}
                  <div class="product12_slide w-slide">
                     {% render 'product_slide', product: product %}
                  </div>
                  {% endfor %}
               </div>
               <div class="slider_arrow is-left w-slider-arrow-left">
                  <div class="product12_arrow-icon w-embed">
                     <svg width="100%" height="100%" viewbox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M3.31066 8.75001L9.03033 14.4697L7.96967 15.5303L0.439339 8.00001L7.96967 0.469676L9.03033 1.53034L3.31066 7.25001L15.5 7.25L15.5 8.75L3.31066 8.75001Z" fill="currentColor"></path>
                     </svg>
                  </div>
               </div>
               <div class="slider_arrow w-slider-arrow-right">
                  <div class="product12_arrow-icon w-embed">
                     <svg width="100%" height="100%" viewbox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M12.6893 7.25L6.96967 1.53033L8.03033 0.469666L15.5607 8L8.03033 15.5303L6.96967 14.4697L12.6893 8.75H0.5V7.25H12.6893Z" fill="currentColor"></path>
                     </svg>
                  </div>
               </div>
               {% comment %} <div class="slider-nav w-slider-nav w-slider-nav-invert w-round"></div> {% endcomment %}
            </div>
            
         </div>
      </div>
   </div>
</div>

{% schema %} 
{
  "tag": "section",
  "name": "ProductSlider",
  "class": "section_product12",
  "blocks": [
    {
      "name": "Button",
      "type": "button",
      "settings": [
        {
          "type": "header",
          "content": "Button Settings"
        },
        {
          "type": "select",
          "id": "btn_layout",
          "label": "Button Layout",
          "options": [
            {
              "value": "btn_layout_text",
              "label": "Text Only"
            },
            {
              "value": "btn_layout_icon",
              "label": "Icon Only"
            },
            {
              "value": "btn_layout_both",
              "label": "Both"
            }
          ],
          "default": "btn_layout_both"
        },
        {
          "type": "select",
          "id": "btn_style",
          "label": "Button Style",
          "options": [
            {
              "value": "is-primary",
              "label": "Primary"
            },
            {
              "value": "is-secondary",
              "label": "Secondary"
            },
            {
              "value": "is-tertiary",
              "label": "Tertiary"
            },
            {
              "value": "is-alternate",
              "label": "Alternate"
            },
            {
              "value": "is-link",
              "label": "Link"
            }
          ],
          "default": "is-primary"
        },
        {
          "type": "select",
          "id": "btn_size",
          "label": "Button Size",
          "options": [
            {
              "value": "is-xsmall",
              "label": "xSmall"
            },
            {
              "value": "is-small",
              "label": "Small"
            },
            {
              "value": "is-default",
              "label": "Default"
            },
            {
              "value": "is-large",
              "label": "Large"
            }
          ],
          "default": "is-default"
        },
        {
          "type": "select",
          "id": "btn_icon_size",
          "label": "Button Icon Size",
          "options": [
            {
              "value": "icon-1x1-xsmall",
              "label": "xSmall"
            },
            {
              "value": "icon-1x1-small",
              "label": "Small"
            },
            {
              "value": "icon-1x1-medium",
              "label": "Medium"
            },
            {
              "value": "icon-1x1-large",
              "label": "Large"
            }
          ],
          "default": "icon-1x1-small"
        },
        {
          "type": "url",
          "id": "btn_url",
          "label": "Button Link"
        },
        {
          "type": "text",
          "id": "btn_text",
          "label": "Button Text",
          "placeholder": "Button Text",
          "default": "Button Text"
        },
        {
          "type": "text",
          "id": "btn_icon_viewbox",
          "label": "Button Icon SVG viewBox",
          "placeholder": "0 0 384 512"
        },
        {
          "type": "textarea",
          "id": "btn_icon_path",
          "label": "Button Icon SVG Path",
          "placeholder": "M328 96c13.3 0 24 10.7 24 24l0 240c0 13.3-10.7 24-24 24s-24-10.7-24-24l0-182.1L73 409c-9.4 9.4-24.6 9.4-33.9 0s-9.4-24.6 0-33.9l231-231L88 144c-13.3 0-24-10.7-24-24s10.7-24 24-24l240 0z"
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "header",
      "content": "Products Content Settings"
    },
    {
      "type": "textarea",
      "id": "products_section_title",
      "label": "Section Title",
      "default": "Featured Products"
    },
    {
      "type": "textarea",
      "id": "products_heading_text",
      "label": "Products Heading Text",
      "default": "Medium length section heading goes here"
    },
    {
      "type": "richtext",
      "id": "products_paragraph_text",
      "label": "Products Paragraph Text",
      "default": "<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>"
    },
    {
      "id": "collection_select_a_collection",
      "type": "collection",
      "label": "Select a Collection"
    },
    {
      "type": "range",
      "id": "collection_select_a_collection_limit",
      "min": 1,
      "max": 99,
      "step": 1,
      "label": "Limit: Select a Collection",
      "default": 6
    }
  ],
  "presets": [
    {
      "name": "ProductSlider",
      "category": "Liquify",
      "blocks": [
        {
          "type": "button"
        }
      ]
    }
  ]
}
{% endschema %}

<style>
@media screen and (min-width: 768px) {

    .product12_component .product12_mask {
        width: 100%;
        overflow: hidden;
        padding: 10px 0;
    }
    .product12_component .product12_slider{
        overflow: hidden;
    }
    .product12_component .slider_arrow.is-left{
       left:2%;
    }
    .product12_component .w-slider-arrow-right{
        
    }
    .product12_component .product12_heading{
        {% comment %} margin: auto;
        text-align: center; {% endcomment %}
    }
    .product12_component  .product12_item{
        aspect-ratio: 4 / 4;
    }
    .product12_component .product12_slider{
        padding: 20px 6px;
    }
    .product12_component .product12_slide{
        padding: 15px 10px 30px 10px;
        width: 20%;
    }
    .product12_component .slider_arrow{
        inset: auto 2% 60% 95%;
    }
    .product12_component .w-slider-arrow-left, .product12_component .w-slider-arrow-right{
        margin: inherit;
    }
}
@media screen and (max-width: 767px) {
    .product12_component .slider_arrow{
       inset: 94% -25% 0% -10%;
    }
    .slider_arrow.is-left{
      right: 10%;
    }
}
</style>