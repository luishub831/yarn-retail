{% comment %}
  Generic Two-Image Product Link Section (responsive stacked on mobile)
{% endcomment %}

<section class="two-image-product-section">
  <div class="container">
    {% if section.settings.heading != blank %}
      <h2 class="heading-style-h2 margin-bottom margin-small">{{ section.settings.heading }}</h2>
    {% endif %}

    <div class="two-image-grid">
      {% if section.settings.left_product != blank %}
        <a href="{{ section.settings.left_product.url }}" class="two-image-item">
          {% if section.settings.left_image != blank %}
            <img src="{{ section.settings.left_image | image_url: width: 800 }}" alt="{{ section.settings.left_product.title | escape }}">
          {% endif %}
        </a>
      {% endif %}

      {% if section.settings.right_product != blank %}
        <a href="{{ section.settings.right_product.url }}" class="two-image-item">
          {% if section.settings.right_image != blank %}
            <img src="{{ section.settings.right_image | image_url: width: 800 }}" alt="{{ section.settings.right_product.title | escape }}">
          {% endif %}
        </a>
      {% endif %}
    </div>
  </div>
</section>

<style>
.two-image-product-section {
  padding: 40px 0;
  text-align: center;
}

.two-image-heading {
  font-size: 2rem;
  font-weight: 700;
  margin-bottom: 25px;
}

.two-image-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 0;
}

.two-image-item img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
  border-radius: 0;
}

/* Mobile: stack images vertically */
@media (max-width: 768px) {
  .two-image-grid {
    grid-template-columns: 1fr; /* one column */
  }
}
</style>

{% schema %}
{
  "name": "Two Image Product Links",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Your Section Title"
    },
    {
      "type": "image_picker",
      "id": "left_image",
      "label": "Left Image"
    },
    {
      "type": "product",
      "id": "left_product",
      "label": "Left Product"
    },
    {
      "type": "image_picker",
      "id": "right_image",
      "label": "Right Image"
    },
    {
      "type": "product",
      "id": "right_product",
      "label": "Right Product"
    }
  ],
  "presets": [
    {
      "name": "Two Image Product Links"
    }
  ]
}
{% endschema %}
