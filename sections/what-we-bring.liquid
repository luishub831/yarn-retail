<div class="padding-global">
   <div class="container-large">
      <div class="padding-section-large">
         <div class="what-we-bring_component">
            <div class="settings-schema w-embed"></div>
            <div class="what-we-bring_header">
               <div class="what-we-bring_title-wrapper">
                  <h2 li-object="section.settings.main_heading" class="heading-style-h2">{{ section.settings.main_heading }}</h2>
               </div>
               <div class="what-we-bring_button-wrapper">
                  {% if section.settings.cta_text and section.settings.cta_url %}
                  <a li-object:href="section.settings.cta_url" href="{{ section.settings.cta_url }}" class="button">
                     {{ section.settings.cta_text }}
                  </a>
                  {% endif %}
               </div>
            </div>
            <div li-content-for-blocks="" class="what-we-bring_grid">
               {% for block in section.blocks %}
               {% case block.type %}
               {% when '@app' %}
               {% render block %}
               {% when 'attribute-card' %}
               <div li-block="Attribute Card" class="what-we-bring_card">
                  <div class="settings-schema w-embed"></div>
                  <div class="what-we-bring_card-content">
                     <h3 li-object="block.settings.card_heading" class="what-we-bring_card-heading">{{ block.settings.card_heading }}</h3>
                     <div class="what-we-bring_card-description">
                        <p li-object="block.settings.card_description">{{ block.settings.card_description }}</p>
                     </div>
                  </div>
               </div>
               {% endcase %}
               {% endfor %}
            </div>
         </div>
      </div>
   </div>
</div>

<style>
.what-we-bring_component {
   width: 100%;
}

.what-we-bring_header {
   display: flex;
   justify-content: space-between;
   align-items: flex-start;
   margin-bottom: 60px;
}

.what-we-bring_title-wrapper {
   flex: 1;
}

.what-we-bring_button-wrapper {
   flex-shrink: 0;
   margin-left: 40px;
}

.what-we-bring_grid {
   display: inline-flex;
   align-items: flex-start;
   gap: 22px;
}

.what-we-bring_card {
   text-align: left;
}

.what-we-bring_card-heading {
   font-size: 20px;
   font-weight: 400;
   margin-bottom: 16px;
   line-height: 1.3;
}

.what-we-bring_card-description {
   line-height: 1.6;
   color: #666;
}

.what-we-bring_card-description p {
   margin: 0;
}

/* Mobile responsiveness */
@media (max-width: 768px) {
   .what-we-bring_header {
      flex-direction: column;
      gap: 30px;
   }
   
   .what-we-bring_button-wrapper {
      margin-left: 0;
      width: 100%;
   }
   
   .what-we-bring_grid {
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      align-self: stretch;
   }
   
   
}
</style>

{% schema %}
{
  "tag": "section",
  "name": "What We Bring",
  "class": "section_what-we-bring",
  "blocks": [
    {
      "name": "Attribute Card",
      "type": "attribute-card",
      "settings": [
        {
          "id": "card_heading",
          "type": "text",
          "label": "Heading",
          "default": "We're authentic"
        },
        {
          "id": "card_description",
          "type": "textarea",
