<iframe id="designerStudio" style="width: 100%;height:800px;border:0;margin-left: 0;box-shadow:none;" src="" frameborder="0" scrolling="no">
    </iframe>
<div id="dialog" style="display: none" align="center">
    Would you like to Sign in and save artworks to order again?
</div>
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.8.9/jquery-ui.js" type="text/javascript"></script>
<link href="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.8.9/themes/blitzer/jquery-ui.css"
    rel="stylesheet" type="text/css" />
<script type=text/javascript>
 $(document).ready(function() {
  var designURL = "https://designer.theprintgarage.com.au/designer/";
 	var baseURL = designURL + "index.html?";
 	var url = window.location.href; 
      if(url.indexOf('?') > -1)
        {
          params = url.substr(url.indexOf("?") + 1);
          var iframe = document.getElementById('designerStudio');
			iframe.src = baseURL + params;
          
        }

    $('html,body').animate({
        scrollTop: $("#designerStudio").offset().top},
        'slow');

    {% if customer %}
        console.log("signed in")

     {% else %}
        $(function () {
            $("#dialog").dialog({
                modal: true,
                title: "You might not save artworks!!!",
                width: 600,
                height: 260,
                buttons: [
                {
                    id: "signin",
                    text: "Sign in to save designs",
                    click: function () {
                        window.location.href="/account/login";
                    }
                },
                {
                    id: "designer",
                    text: "Start designing!",
                    click: function () {
                        $(".ui-dialog").remove(); 
                        $(".ui-widget-overlay").remove();
                    }
                }
                ]
            });
        });


     {% endif %}
 
 });
</script>
<style>
  .ui-widget-header {
    border: 1px solid #e3a1a1;
    background: #033a76;
    color: #ffffff;
    font-weight: bold;
    }
</style>
