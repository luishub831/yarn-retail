<script src="{{ 'liquify_custom.js' | asset_url }}" type="text/javascript"></script>
<div li-element="product-variant-container" class="product12_item" x-data="handleVariant({{ product | json | escape }}, {{ product.options_by_name | json | escape }}, {{ product.selected_or_first_available_variant | json | escape }})" x-init="$nextTick(() => { activateVariants() })" @setbundleitem.window="updateBundleItem($event.detail.product, $event.detail.quantity)">
   <div class="product-slide_image-link">
      <a li-object:href="product.url" href="{{ product.url }}" class="product-slide_image-wrapper w-inline-block">
         <div class="product12_bg-overlay"></div>
         <img li-object:alt="product.featured_image.alt" loading="lazy" li-object:src="product.featured_image | image_url: width: 720" src="{{ product.featured_image | image_url: width: 720 }}" alt="{{ product.featured_image.alt }}" class="product-slide_image">
         <div class="product12_bg-image"></div>
         
      </a>
      <div class="product-item_tag_list">
         {% if product.selected_or_first_available_variant.available != true %}    
         <div li-if="product.selected_or_first_available_variant.available != true" class="product-item_tag">
            Not in Stock    
         </div>
         {% endif %}{% if product.compare_at_price_max > product.price %}    
         <div li-if="product.compare_at_price_max > product.price" class="product-item_tag is-yellow">
            Sale    
         </div>
         {% endif %}
         
      </div>
      
      
   </div>
   <div class="spacer-xxsmall"></div>
   <div class="spacer-xsmall"></div>
   <div class="product-item_form-wrapper">
      {% if product.available == true %}    
      <div li-if="product.available == true">
         <a li-element="add-to-cart" href="#" class="button is-tertiary is-small w-button" @click="addToCart($event, true)" :disabled="!addToCartButton">Add to Cart</a>    
      </div>
      {% endif %}{% if product.available != true %}    
      <div li-if="product.available != true">
         <a href="#" class="button is-secondary is-small pointer-events-off w-button">Not in Stock</a>    
      </div>
      {% endif %}
   </div>
   
</div>
<div class="product_desc_wrapper">
   <a href="{{ product.url }}">
      <div class="product_title">{{ product.title }}</div>
      <div class="product_price">From ${{ product.price }}</div>
   </a>
   
   <!-- GET STARTED button for hover -->
   <div class="product-hover-button">
     <a href="{{ product.url }}" class="button w-inline-block is-default is-primary product-get-started-btn">
       <div class="settings-schema w-embed"></div>
       <span>
         GET STARTED
       </span>
     </a>
   </div>
</div>
<style>
    .product_desc_wrapper{
        text-align: left;
        font-weight: bold;
        margin-top: 10px;
        position: relative;
        padding: 10px 15px;
    }
    
    /* Product slide container - only style on hover */
    .product12_slide {
        transition: all 0.3s ease;
    }
    
    .product12_slide:hover {
        background: white;
        border-radius: 50px;
        padding-top: 15px;
        padding-bottom: 15px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }
    
    /* GET STARTED button styling */
    .product-hover-button {
        opacity: 0;
        transition: opacity 0.3s ease;
        margin-top: 10px;
    }
    
    .product-get-started-btn {
        width: 100% !important;
        display: block !important;
        text-align: center;
    }
    
    /* Show button on hover - targeting the slide wrapper */
    .product12_slide:hover .product-hover-button,
    .product12_item:hover .product-hover-button {
        opacity: 1;
    }
    
    /* Hide add to cart button on hover */
    .product12_slide:hover .product-item_form-wrapper,
    .product12_item:hover .product-item_form-wrapper {
        opacity: 0;
        transition: opacity 0.3s ease;
    }
    
    {% comment %} .product-card-overlay{
        position: absolute;
        top: 32px; /* directly after header */
        left: 0;
        right: 0;
        bottom: 0; /* until card bottom */
        background: rgba(88, 88, 88, 0.6);
        color: white;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 15px;
        opacity: 0;
        transition: opacity 0.3s ease;
    } {% endcomment %}
    .product-slide_image-link:hover .product-card-overlay{
        opacity: 1;
    }
   .product_price{
      font-weight: 400;
      font-size: 16px;
   }
</style>