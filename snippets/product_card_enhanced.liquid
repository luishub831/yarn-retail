<script src="{{ 'liquify_custom.js' | asset_url }}" type="text/javascript"></script>
<div li-element="product-variant-container" class="product-card_enhanced" x-data="handleVariant({{ product | json | escape }}, {{ product.options_by_name | json | escape }}, {{ product.selected_or_first_available_variant | json | escape }})" x-init="$nextTick(() => { activateVariants() })" @setbundleitem.window="updateBundleItem($event.detail.product, $event.detail.quantity)">
   <div class="product-card_image-container">
      <a li-object:href="product.url" href="{{ product.url }}" class="product-card_image-wrapper w-inline-block">
         <div class="product-card_bg-overlay"></div>
         <img li-object:alt="product.featured_image.alt" loading="lazy" li-object:src="product.featured_image | image_url: width: 720" src="{{ product.featured_image | image_url: width: 720 }}" alt="{{ product.featured_image.alt }}" class="product-card_image">
         <div class="product-card_bg-image"></div>
      </a>
      
      <div class="product-card_tag_list">
         {% if product.selected_or_first_available_variant.available != true %}    
         <div li-if="product.selected_or_first_available_variant.available != true" class="product-card_tag">
            Out of stock    
         </div>
         {% endif %}{% if product.compare_at_price_max > product.price %}    
         <div li-if="product.compare_at_price_max > product.price" class="product-card_tag is-sale">
            Sale    
         </div>
         {% endif %}
      </div>
   </div>
   
   <div class="product-card_content">
      <a href="{{ product.url }}" class="product-card_link">
         <div class="product-card_title">{{ product.title }}</div>
         <div class="product-card_price">
            {% if product.compare_at_price_max > product.price %}
               <span class="product-card_price-compare">{{ product.compare_at_price_max | money }}</span>
            {% endif %}
            <span class="product-card_price-current">From {{ product.price | money }}</span>
         </div>
      </a>
      
      <!-- Default Add to Cart Button -->
      <div class="product-card_form-wrapper">
         {% if product.available == true %}    
         <div li-if="product.available == true">
            <a li-element="add-to-cart" href="#" class="button is-tertiary is-small w-button" @click="addToCart($event, true)" :disabled="!addToCartButton">Add to Cart</a>    
         </div>
         {% endif %}{% if product.available != true %}    
         <div li-if="product.available != true">
            <a href="#" class="button is-secondary is-small pointer-events-off w-button">Out of Stock</a>    
         </div>
         {% endif %}
      </div>
      
      <!-- GET STARTED button for hover -->
      <div class="product-card_hover-button">
        <a href="{{ product.url }}" class="button w-inline-block is-default is-primary product-get-started-btn">
          <span>GET STARTED</span>
        </a>
      </div>
   </div>
</div>
<style>
    .product_desc_wrapper{
        text-align: left;
        font-weight: bold;
        margin-top: 10px;
        position: relative;
        padding: 10px 15px;
    }
    
    /* Product slide container - only style on hover */
    .product12_slide {
        transition: all 0.3s ease;
    }
    
    .product12_slide:hover {
        background: white;
        border-radius: 50px;
        padding-top: 15px;
        padding-bottom: 15px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }
    
    /* GET STARTED button styling */
    .product-hover-button {
        opacity: 0;
        transition: opacity 0.3s ease;
        margin-top: 10px;
    }
    
    .product-get-started-btn {
        width: 100% !important;
        display: block !important;
        text-align: center;
    }
    
    /* Show button on hover - targeting the slide wrapper */
    .product12_slide:hover .product-hover-button,
    .product12_item:hover .product-hover-button {
        opacity: 1;
    }
    .product12_item {
      border: 1px solid #E4E4E4
    }
    
    /* Hide add to cart button on hover */
    .product12_slide:hover .product-item_form-wrapper,
    .product12_item:hover .product-item_form-wrapper {
        opacity: 0;
        transition: opacity 0.3s ease;
    }
    
    {% comment %} .product-card-overlay{
        position: absolute;
        top: 32px; /* directly after header */
        left: 0;
        right: 0;
        bottom: 0; /* until card bottom */
        background: rgba(88, 88, 88, 0.6);
        color: white;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 15px;
        opacity: 0;
        transition: opacity 0.3s ease;
    } {% endcomment %}
    .product-slide_image-link:hover .product-card-overlay{
        opacity: 1;
    }
   .product_price{
      font-weight: 400;
      font-size: 16px;
   }
   @media screen and (max-width: 479px) {
      
      .product12_slide .product-hover-button
      {
         opacity: 1;
      }
   }
</style>